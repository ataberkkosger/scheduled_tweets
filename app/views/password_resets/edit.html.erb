<h1>Parola Değiştir</h1>

<%= form_with url: password_reset_edit_path do |form|%>
    <div class = "mb-3">
    <%= form.label :password %>
      <%= form.password_field :password, class: "form-control", placeholder: "şifre" %>
    </div>
  <div class = "mb-3">
    <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, class: "form-control", placeholder: "şifre" %>
  </div>
  <div class = "mb-3">
    <%= form.submit "şifreyi sıfırla", class: "btn btn-primary"%>
  </div>
<%end%>